@model IList<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (@Model.Count < 1)
{
    <text>There aren't any movies yet.</text>
}
else
{
    <table class="table-bordered table-hover" style="width: 100%">
        <tr>
            <th style="padding: 10px">Movie</th>
            <th style="padding: 10px">Genre</th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <th style="padding: 10px">@Html.ActionLink(movie.Name, "Detail", "Movies", new { id = movie.Id }, null)</th>
                <th style="padding: 10px">@movie.Genre</th>
            </tr>
        }
    </table>
}
